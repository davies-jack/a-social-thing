generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts Posts[]
}

model Posts {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  status    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}